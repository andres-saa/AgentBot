
server {
    listen 443 ssl;
    http2 on;
    server_name api.chat.arhook.com;

    ssl_certificate /etc/letsencrypt/live/api.chat.arhook.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.chat.arhook.com/privkey.pem;
    include /etc/nginx/conf.d/ssl_params.conf;

    location / {
        proxy_pass http://api_chat:80;
        include /etc/nginx/proxy_params.conf;
    }
}

